<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.ProjectRequestActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/project_request_app_bar"
        android:layout_width="match_parent"
        android:layout_height="50sp" />

    <TextView
        android:id="@+id/project_request_text1"
        style="@style/NormalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_request_app_bar"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="20sp"
        android:text="Project Development Request"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/project_request_edit"
        style="@style/NormalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_request_text1"
        android:layout_marginHorizontal="10sp"
        android:background="@drawable/round_gray"
        android:gravity="start"
        android:hint="write a short description about your project requirement"
        android:minHeight="100sp"
        android:padding="10sp"
        android:textColorHint="@color/gray"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/project_request_linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_request_edit"
        android:orientation="vertical">

        <EditText
            android:id="@+id/project_request_budget"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:background="@drawable/round_gray"
            android:gravity="start"
            android:hint="0.0 $"
            android:inputType="numberDecimal"
            android:minHeight="30sp"
            android:padding="10sp"
            android:textColorHint="@color/shimmer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="10sp"
            android:text="budget is negotiable "
            android:textColor="@color/blue" />

    </LinearLayout>


    <EditText
        android:id="@+id/project_request_phone"
        style="@style/NormalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_request_linear_1"
        android:layout_marginHorizontal="10sp"
        android:layout_marginVertical="5sp"
        android:background="@drawable/round_gray"
        android:gravity="start"
        android:hint="Phone number"
        android:inputType="phone"
        android:minHeight="30sp"
        android:padding="10sp"
        android:textColorHint="@color/shimmer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_request_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10sp"
        android:backgroundTint="@color/blue_dark"
        android:gravity="center"
        android:text="Request Project" />


</RelativeLayout>