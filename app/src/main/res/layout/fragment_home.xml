<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/home_linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black3"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_ask_question"
                android:layout_width="match_parent"
                android:layout_height="170sp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="25sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/round_card"
                android:backgroundTint="@color/unTabColor"
                android:elevation="10sp"
                app:cardCornerRadius="10sp">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/graph" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/home_user_image2"
                            android:layout_width="40sp"
                            android:layout_height="45sp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5sp"
                            android:layout_marginHorizontal="10sp"
                            android:src="@drawable/logo"
                            android:visibility="gone"
                            app:civ_border_color="@color/blue_dark"
                            app:civ_border_width="1sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="70sp"
                            android:layout_marginHorizontal="5sp"
                            android:layout_marginVertical="15sp"
                            android:background="@drawable/round_gray"
                            android:padding="5sp">

                            <TextView
                                android:id="@+id/text1"
                                style="@style/NormalText"
                                android:layout_width="150sp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/round_blue"
                                android:backgroundTint="#0581AA"
                                android:gravity="center"
                                android:padding="8sp"
                                android:text="Start Query"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <!--                            <ImageView-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:layout_alignParentRight="true"-->
                            <!--                                android:layout_centerVertical="true"-->
                            <!--                                android:padding="4sp"-->
                            <!--                                android:src="@drawable/connect" />-->

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="150sp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="10sp"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true"
                                app:lottie_rawRes="@raw/home_dev" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_all_developers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginHorizontal="5sp"
                        android:background="@drawable/round_gray"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/round_auth"
                            android:padding="10sp"
                            android:text="View All Developers"
                            android:textStyle="bold" />

                        <!--                        <ImageView-->
                        <!--                            android:layout_width="34sp"-->
                        <!--                            android:layout_height="34sp"-->
                        <!--                            android:layout_gravity="center"-->
                        <!--                            android:layout_marginVertical="5sp"-->
                        <!--                            android:layout_marginHorizontal="10sp"-->
                        <!--                            android:layout_weight="1"-->
                        <!--                            android:src="@drawable/expert" />-->

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/update_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:backgroundTint="@android:color/holo_red_light"
                android:visibility="gone">

                <TextView
                    android:id="@+id/update_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/notice_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="1sp"
                android:backgroundTint="@android:color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/notice_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:padding="10sp"
                    android:text="This is notice section"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/home_new_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10sp"
                android:backgroundTint="@color/black3"
                android:gravity="center"
                android:visibility="gone"
                app:cardCornerRadius="10sp">

                <LinearLayout
                    android:id="@+id/home_new_project_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5sp"
                        android:layout_marginHorizontal="10sp"
                        android:src="@drawable/ic_baseline_library_add_24"
                        app:tint="#76D1FF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5sp"
                        android:text="New Project Request"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/home_view"
                android:layout_width="match_parent"
                android:layout_height="0.2sp"
                android:layout_below="@id/home_new_project"
                android:layout_marginHorizontal="80sp"
                android:layout_marginVertical="20sp"
                android:background="@color/neon" />


        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/star" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_linear_1"
            android:backgroundTint="@color/black"
            android:elevation="10sp"
            android:visibility="gone"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/NormalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/home_view"
                        android:layout_marginVertical="20sp"
                        android:layout_weight="1"
                        android:text="Hand Picked for you"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20sp"
                        android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/home_article_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginVertical="2sp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/home_article_title"
                        style="@style/NormalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10sp"
                        android:layout_weight="3"
                        android:text="Today, I was deploying a serverless backend to AWS with with Serverless. At one point, I ran into a cryptic error from "
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cat_card_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_linear_1"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:backgroundTint="#150E32"
            android:padding="10sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/view_all_cat_home"
                    style="@style/NormalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="10sp"
                    android:letterSpacing="0.1"
                    android:text="View All"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_navigate_next_24" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frag_home_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cat_card_home"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>